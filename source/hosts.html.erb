   <div class="container" id="home-flats">
      <h2 class="text-center">Hosts</h2>
      <div class="row">
        <% data.flats.each do |owner, flat| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%), url('https://kitt.lewagon.com/placeholder/users/<%= flat.user_name %>');">
            <div class="card-category"><%= flat.city_name %></div>
            <div class="card-description">
              <h3><%= flat.host_name %></h3>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
